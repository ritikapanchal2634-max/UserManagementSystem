@{
    ViewData["Title"] = "Practical2 - Print Values";
}

<h2>Practical2 - Height Game</h2>

<form method="post">
    <div class="mb-3">
        <label>Enter Limit:</label>
        <input type="number" name="limit" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>

<hr />

@if (ViewBag.Result != null)
{
    if (((List<object>)ViewBag.Result).Count == 0)
    {
        <p style="color:red">Limit must be greater than 0.</p>
    }
    else
    {
        <h4>Output:</h4>
        <ul>
            @foreach (var item in (List<object>)ViewBag.Result)
            {
                <li>@item</li>
            }
        </ul>
    }
}

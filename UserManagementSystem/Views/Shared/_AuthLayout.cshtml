<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Management System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        :root {
            --navy-blue: #1a2332;
            --navy-blue-dark: #0f1821;
            --accent-blue: #4a90e2;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--navy-blue) 0%, var(--navy-blue-dark) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-card {
            width: 100%;
            max-width: 550px;
            background: rgba(255, 255, 255, 0.97);
            border-radius: 20px;
            padding: 40px 35px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.35);
            backdrop-filter: blur(10px);
        }

        .auth-header h2 {
            font-size: 30px;
            color: var(--navy-blue);
            font-weight: 700;
        }

        .form-control {
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 12px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent-blue), #357abd);
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
        }

        .auth-footer {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
        }

            .auth-footer a {
                font-weight: 600;
                text-decoration: none;
                color: var(--accent-blue);
            }
    </style>
</head>
<body>

    <div class="auth-card">
        @RenderBody()
    </div>

    <!-- jQuery (added once only) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

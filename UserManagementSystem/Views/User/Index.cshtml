@using UserManagementSystem.Models.ViewModels
@model PaginatedUserListViewModel
@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUserRole = Context.Session.GetString("Role");
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Registered Users</h3>
            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                <button type="submit" class="btn btn-light btn-sm">Logout</button>
            </form>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Search and Page Size -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <form method="get" asp-action="Index">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Search by name, username, state, or city" value="@Model.SearchTerm" />
                            <input type="hidden" name="pageSize" value="@Model.PageSize" />
                            <input type="hidden" name="sortBy" value="@Model.SortBy" />
                            <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i> Search
                            </button>
                            @if (!string.IsNullOrEmpty(Model.SearchTerm))
                            {
                                <a href="@Url.Action("Index", new { pageSize = Model.PageSize })" class="btn btn-secondary">Clear</a>
                            }
                        </div>
                    </form>
                </div>
                <div class="col-md-6 text-end">
                    <form method="get" asp-action="Index" class="d-inline">
                        <label class="me-2">Records per page:</label>
                        <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                        <input type="hidden" name="sortBy" value="@Model.SortBy" />
                        <input type="hidden" name="sortOrder" value="@Model.SortOrder" />
                        <select name="pageSize" class="form-select d-inline-block w-auto" onchange="this.form.submit()">
                            <option value="5" selected="@(Model.PageSize == 5)">5</option>
                            <option value="10" selected="@(Model.PageSize == 10)">10</option>
                            <option value="25" selected="@(Model.PageSize == 25)">25</option>
                            <option value="50" selected="@(Model.PageSize == 50)">50</option>
                            <option value="100" selected="@(Model.PageSize == 100)">100</option>
                        </select>
                    </form>
                </div>
            </div>

            <!-- User Table -->
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a href="@Url.Action("Index", new { 
                                    sortBy = "Name", 
                                    sortOrder = Model.SortBy == "Name" && Model.SortOrder == "asc" ? "desc" : "asc",
                                    page = Model.CurrentPage,
                                    pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm
                                })" class="text-white text-decoration-none">
                                    Name 
                                    @if (Model.SortBy == "Name")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { 
                                    sortBy = "UserName", 
                                    sortOrder = Model.SortBy == "UserName" && Model.SortOrder == "asc" ? "desc" : "asc",
                                    page = Model.CurrentPage,
                                    pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm
                                })" class="text-white text-decoration-none">
                                    Username 
                                    @if (Model.SortBy == "UserName")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Index", new { 
                                    sortBy = "DateOfBirth", 
                                    sortOrder = Model.SortBy == "DateOfBirth" && Model.SortOrder == "asc" ? "desc" : "asc",
                                    page = Model.CurrentPage,
                                    pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm
                                })" class="text-white text-decoration-none">
                                    Date of Birth 
                                    @if (Model.SortBy == "DateOfBirth")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>Gender</th>
                            <th>State</th>
                            <th>City</th>
                            <th>
                                <a href="@Url.Action("Index", new { 
                                    sortBy = "CreatedDate", 
                                    sortOrder = Model.SortBy == "CreatedDate" && Model.SortOrder == "asc" ? "desc" : "asc",
                                    page = Model.CurrentPage,
                                    pageSize = Model.PageSize,
                                    searchTerm = Model.SearchTerm
                                })" class="text-white text-decoration-none">
                                    Registered On 
                                    @if (Model.SortBy == "CreatedDate")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortOrder == "asc" ? "up" : "down")"></i>
                                    }
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Name</td>
                                    <td>@user.UserName</td>
                                    <td>@user.DateOfBirth.ToString("MM/dd/yyyy")</td>
                                    <td>@user.Gender</td>
                                    <td>@user.State</td>
                                    <td>@user.City</td>
                                    <td>@user.CreatedDate.ToString("MM/dd/yyyy")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        @if (currentUserRole == "Admin")
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@user.Id)" title="Delete">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No users found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.CurrentPage - 1, 
                                pageSize = Model.PageSize,
                                sortBy = Model.SortBy,
                                sortOrder = Model.SortOrder,
                                searchTerm = Model.SearchTerm
                            })">Previous</a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { 
                                    page = i, 
                                    pageSize = Model.PageSize,
                                    sortBy = Model.SortBy,
                                    sortOrder = Model.SortOrder,
                                    searchTerm = Model.SearchTerm
                                })">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { 
                                page = Model.CurrentPage + 1, 
                                pageSize = Model.PageSize,
                                sortBy = Model.SortBy,
                                sortOrder = Model.SortOrder,
                                searchTerm = Model.SearchTerm
                            })">Next</a>
                        </li>
                    </ul>
                </nav>

                <div class="text-center">
                    <p class="text-muted">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to 
                        @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalRecords) 
                        of @Model.TotalRecords records
                    </p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId) {
            $('#deleteUserId').val(userId);
            $('#deleteModal').modal('show');
        }
    </script>
}
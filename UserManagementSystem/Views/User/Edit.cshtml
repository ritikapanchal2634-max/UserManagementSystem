@using UserManagementSystem.Models.ViewModels
@model EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0">Edit User</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-controller="User" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Date of Birth <span class="text-danger">*</span></label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label d-block">Gender <span class="text-danger">*</span></label>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" type="radio" value="Male" class="form-check-input" id="genderMale" />
                                <label class="form-check-label" for="genderMale">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" type="radio" value="Female" class="form-check-input" id="genderFemale" />
                                <label class="form-check-label" for="genderFemale">Female</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" type="radio" value="Other" class="form-check-input" id="genderOther" />
                                <label class="form-check-label" for="genderOther">Other</label>
                            </div>
                            <div>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hobbies</label>
                            <div class="row">
                                @{
                                    var hobbies = new[] { "Reading", "Sports", "Music", "Travel", "Cooking", "Gaming" };
                                    foreach (var hobby in hobbies)
                                    {
                                        var isChecked = Model.Hobbies != null && Model.Hobbies.Contains(hobby);
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input type="checkbox" name="Hobbies" value="@hobby" class="form-check-input"
                                                       id="hobby@hobby" checked="@isChecked" />
                                                <label class="form-check-label" for="hobby@hobby">@hobby</label>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="StateId" class="form-label">State <span class="text-danger">*</span></label>
                                <select asp-for="StateId" class="form-select" id="stateDropdown">
                                    <option value="">Select State</option>
                                    @foreach (var state in ViewBag.States)
                                    {
                                        <option value="@state.Id" selected="@(state.Id == Model.StateId)">@state.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="StateId" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="CityId" class="form-label">City <span class="text-danger">*</span></label>
                                <select asp-for="CityId" class="form-select" id="cityDropdown">
                                    <option value="">Select City</option>
                                    @foreach (var city in ViewBag.Cities)
                                    {
                                        <option value="@city.Id" selected="@(city.Id == Model.CityId)">@city.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Pincode" class="form-label">Pincode <span class="text-danger">*</span></label>
                                <input asp-for="Pincode" class="form-control" maxlength="6" />
                                <span asp-validation-for="Pincode" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Existing Documents -->
                        @if (Model.ExistingDocuments != null && Model.ExistingDocuments.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label">Existing Documents</label>
                                <div class="list-group">
                                    @foreach (var doc in Model.ExistingDocuments)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <i class="bi bi-file-earmark"></i> @doc.FileName
                                                <small class="text-muted">(@((doc.FileSize / 1024.0).ToString("F2")) KB)</small>

                                            </div>
                                            <div>
                                                <a href="@Url.Action("DownloadDocument", "User", new { documentId = doc.Id })"
                                                   class="btn btn-sm btn-primary" title="Download">
                                                    <i class="bi bi-download"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger"
                                                        onclick="deleteDocument(@doc.Id, @Model.Id)" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Upload New Documents -->
                        <div class="mb-3">
                            <label asp-for="NewDocuments" class="form-label">Upload New Documents</label>
                            <input asp-for="NewDocuments" type="file" class="form-control" multiple
                                   accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" />
                            <span asp-validation-for="NewDocuments" class="text-danger"></span>
                            <small class="form-text text-muted">Allowed: PDF, DOC, DOCX, JPG, PNG (Max 5MB per file)</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">Update User</button>
                            <a asp-action="Index" asp-controller="User" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Cascading dropdown
            $('#stateDropdown').change(function () {
                var stateId = $(this).val();
                var cityDropdown = $('#cityDropdown');

                if (stateId) {
                    $.ajax({
                        url: '@Url.Action("GetCities", "Account")',
                        type: 'GET',
                        data: { stateId: stateId },
                        success: function (cities) {
                            cityDropdown.empty();
                            cityDropdown.append('<option value="">Select City</option>');
                            $.each(cities, function (index, city) {
                                cityDropdown.append('<option value="' + city.id + '">' + city.name + '</option>');
                            });
                        }
                    });
                }
            });
        });

        function deleteDocument(documentId, userId) {
            if (confirm('Are you sure you want to delete this document?')) {
                $.ajax({
                    url: '@Url.Action("DeleteDocument", "User")',
                    type: 'POST',
                    data: { documentId: documentId, userId: userId },
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Error deleting document: ' + result.message);
                        }
                    },
                    error: function () {
                        alert('Error deleting document');
                    }
                });
            }
        }
    </script>
}
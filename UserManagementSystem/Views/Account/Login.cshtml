@using UserManagementSystem.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-header">
    <h2>Welcome Back!</h2>
    <p>Please login to your account to continue</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Login" asp-controller="Account" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="form-group">
        <label asp-for="UserName" class="form-label">
            <i class="bi bi-person me-2"></i>Username
        </label>
        <div class="input-group">
            <input asp-for="UserName" class="form-control with-icon" placeholder="Enter your username" />
            <span class="input-icon">
                <i class="bi bi-person"></i>
            </span>
        </div>
        <span asp-validation-for="UserName" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">
            <i class="bi bi-lock me-2"></i>Password
        </label>
        <div class="input-group">
            <input asp-for="Password" type="password" class="form-control with-icon" id="passwordInput" placeholder="Enter your password" />
            <span class="password-toggle" onclick="togglePassword()">
                <i class="bi bi-eye" id="toggleIcon"></i>
            </span>
        </div>
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
            <label asp-for="RememberMe" class="form-check-label" for="rememberMe">
                Keep me logged in
            </label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-box-arrow-in-right me-2"></i>Login to Account
        </button>
    </div>
</form>

<div class="auth-footer">
    <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Create one now</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
}